<div class="grid">
  <div
    class="
      h-96 w-full flex
      items-center mt-10
    "
  >
    <div
      class="
        relative bg-cover
        bg-center bg-no-repeat
        w-full h-96
        bg-gradient-to-r from-indigo-500
      "
      style="
        background-image:
          linear-gradient(to bottom, rgba(0, 0, 0, 0),
          rgba(0, 0, 0, 0.6)),
          url('<%= @nft_collections.first.image %>');
      "
    >
      <div
        class="
          absolute bottom-0
          ml-3 mb-3
          text-white font-bold
        "
      >
        <div class="text-3xl">
          <%= @nft_collections.first.name %>
        </div>
        <div class="text-xl">
          <%= @nft_collections.first.creater_name %>
        </div>
      </div>
    </div>
  </div>
</div>
